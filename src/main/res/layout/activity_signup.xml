<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orange"
    android:clipChildren="false">

    <!-- White Curve Background -->
    <View
        android:id="@+id/whiteCurve"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:background="@drawable/big_white_top_curve"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Logo -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="275dp"
        android:layout_height="264dp"
        android:src="@drawable/logo"
        android:contentDescription="@string/app_logo_desc"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toTopOf="@id/whiteCurve"
        app:layout_constraintBottom_toBottomOf="@id/whiteCurve"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Pizza Image -->
    <ImageView
        android:id="@+id/pizza"
        android:layout_width="238dp"
        android:layout_height="246dp"
        android:layout_marginStart="-110dp"
        android:layout_marginBottom="-60dp"
        android:src="@drawable/pizza"
        android:scaleType="centerCrop"
        android:contentDescription="@string/bottom_pizza"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <!-- Signup Form -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="32dp"
        app:layout_constraintTop_toBottomOf="@id/whiteCurve"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:layout_marginBottom="16dp"
            android:inputType="textEmailAddress"/>

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:layout_marginBottom="24dp"
            android:inputType="textPassword"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/signupConfirmButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Sign Up"
            android:textColor="@color/white"
            android:background="@drawable/btn_button_shape"
            android:textSize="20sp"
            android:backgroundTint="@color/dark_orange"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>